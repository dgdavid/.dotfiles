[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
[color "diff"]
	meta = blue
	frag = yellow
	old = red
	new = green
[color "status"]
	added = green
	changed = yellow
	untracked = cyan
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[core]
	pager = less -+$LESS -FRX
[include]
  path = .gitconfig_user
  path = .gitconfig_commit
  path = .gitconfig_alias
